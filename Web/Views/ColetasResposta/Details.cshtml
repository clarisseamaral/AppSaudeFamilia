@model IEnumerable<ColetaApi.Models.DetalhesRespostaDto>

@{
    ViewBag.Title = "Respostas";
}
<h2>Detalhes</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

}


<table class="table">
    <tr>
        <th>
            Pergunta
        </th>
        <th>
            Resposta
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pergunta.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alternativas.Texto)
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
        </tr>
    }

</table>

<div class="form-group" style="text-align:center">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>
