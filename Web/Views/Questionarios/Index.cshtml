@model IEnumerable<ColetaApi.Models.QuestionarioDto>

@{
    ViewBag.Title = "Questionários";
}

<h2>Questionários</h2>

<p style="text-align:right">
    @Html.ActionLink("Novo", "Create", "Questionarios", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink(" ", "Details", "Questionarios", new { id = item.Id }, new { @class = "glyphicon glyphicon-file" })
                @Html.ActionLink(" ", "Edit", "Questionarios", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" })
                @Html.ActionLink(" ", "Delete", "Questionarios", new { id = item.Id }, new
               {
                   @class = "glyphicon glyphicon-trash",
                   onclick = "return confirm('Tem certeza que deseja remover esta pergunta?');"
               })
            </td>
        </tr>
    }

</table>
