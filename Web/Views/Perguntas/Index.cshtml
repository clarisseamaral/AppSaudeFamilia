@model IEnumerable<ColetaApi.Models.PerguntaDto>

@{
    ViewBag.Title = "Index";
}
<h2>Perguntas</h2>

@using (Html.BeginForm())
{
    <p style="padding-top: 30px;">
        Descrição: @Html.TextBox("SearchString")<br />
    </p>
    <p style="text-align:right">
        <input type="submit" value="Pesquisar" class="btn btn-primary" />
        @Html.ActionLink("Novo", "Create", "Perguntas", null, new { @class = "btn btn-primary" })
    </p>
}

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Descricao)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
            <td>
                @Html.ActionLink(" ", "Details", "Perguntas", new { id = item.Id }, new { @class = "glyphicon glyphicon-file" })
                @Html.ActionLink(" ", "Delete", "Perguntas", new { id = item.Id }, new
               {
                   @class = "glyphicon glyphicon-trash",
                   onclick = "return confirm('Tem certeza que deseja remover esta pergunta?');"
               })

            </td>
        </tr>
    }
</table>